<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page trimDirectiveWhitespaces ="true"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title></title>
</head>
<body>


<br>
<div class="col-12 transfer-div" >
<div class="card">
      <div class="card-header">
        <h3 class="card-title">table with hover and checkbox</h3>
      </div>
<div class="card-body">


<table class="mb-1 table table-hover">
<thead>
<tr>
   <th>NO</th>
   <th>first</th>
   <th>second</th>
   <th>checkbox</th>
</tr>
</thead>
<tbody>
   <tr>
      <th scope="row">1</th>
      <td>1</td>
      <td>1</td>
      <td><input type="checkbox" class="form-check-input"></td>
   </tr>
      <tr>
      <th scope="row">1</th>
      <td>1</td>
      <td>1</td>
      <td><input type="checkbox" class="form-check-input"></td>
   </tr>
      <tr>
      <th scope="row">1</th>
      <td>1</td>
      <td>1</td>
      <td><input type="checkbox" class="form-check-input"></td>
   </tr>
</tbody>
</table>

    <br>
    <div class="form-group col-sm-2">
    <h5>selectbox</h5>
      <select class="custom-select">
        <option>Value 1</option>
        <option>Value 2</option>
        <option>Value 3</option>
      </select>
</div>

   <div class="form-group col-sm-2">
       <br>
    <h5>search bar</h5>
       <div class="input-group input-group">
           <input type="search" class="form-control form-control" placeholder="default" value="">
           <div class="input-group-append">
               <button type="submit" class="btn btn-default">
                   <i class="fa fa-search"></i>
               </button>
           </div>
       </div>
   </div>
</div>

   <div align="center">
      
      <!-- button -->
      <button type="button" class="btn bg-gradient-primary btn-sm" style="width: 60px;">검색</button>
      <button type="button" class="btn bg-gradient-danger btn-sm" style="width: 60px; ">삭제</button>
            <button type="button" class="btn bg-gradient-gray btn-sm" style="width: 60px; ">조회</button>
      
       <!-- ModalButton -->
       <button type="button" class="btn bg-gradient-primary btn-sm" style="width: 60px;" data-toggle="modal" data-target="#modal-default">
                  Modal
        </button>
        
        
   </div>
   <!-- modal content -->
     <div class="modal fade text-center" id="modal-default">
      <div class="modal-dialog text-center">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true"></span>
            </button>
          </div>
          <div class="modal-body">
            <h4>content</h4>
          </div>
          <div class="modal-footer justify-content-center">
            <button type="button" class="btn btn-primary">확인</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">닫기</button>
          </div>
        </div>
        <!-- /.modal-content -->
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
    

      
   
</div>
</div>
</body>
</html>